{
  "name": "tj",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm --workspace @tj/server run dev\" \"npm --workspace @tj/web run dev\"",
    "build": "npm run build --workspaces",
    "start:prod": "node packages/server/dist/index.js",
    "lint": "eslint . --ext .ts,.tsx,.js --max-warnings 0",
    "test": "npm test --workspaces",
    "bootstrap": "npm install"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.1",
    "@testing-library/react": "^16.3.0",
    "@types/react": "^19.2.0",
    "@types/react-dom": "^19.2.0",
    "@types/supertest": "^6.0.3",
    "@types/testing-library__react": "^10.2.0",
    "concurrently": "^8.2.0",
    "eslint": "^8.47.0",
    "prettier": "^2.8.8",
    "supertest": "^7.1.4",
    "typescript": "^5.6.0"
  }
}
